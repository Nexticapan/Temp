# Cargamos librer칤as
import numpy as np
import pandas as pd
from sklearn.preprocessing import MinMaxScaler
from sklearn.impute import SimpleImputer
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import LSTM, Dense, Dropout
import matplotlib.pyplot as plt

# Cargamos base de datos
df = pd.read_csv('DailyDelhiClimateTest.csv', parse_dates=['date'])
df.set_index('date', inplace=True)

# Seleccionar las columnas que vamos a usar
variables = ['meantemp', 'humidity', 'wind_speed', 'meanpressure']
df = df[variables]

# Mapa de correlaci칩n
import seaborn as sns
import matplotlib.pyplot as plt
import pandas as pd

# Calcular la matriz de correlaci칩n
corr_matrix = df.corr()

# Crear el heatmap
plt.figure(figsize=(8, 6))
sns.heatmap(corr_matrix, annot=True, cmap='coolwarm', fmt=".2f", linewidths=0.5)

# T칤tulo del gr치fico
plt.title("Mapa de calor de correlaciones")

# Mostrar el gr치fico
plt.show()

# Limpiar los datos
df.replace(['---', '', ' ', 'NaN'], np.nan, inplace=True)
imputer = SimpleImputer(strategy='mean')
df_imputed = pd.DataFrame(imputer.fit_transform(df), columns=variables, index=df.index)

# Escalar los datos entre 0 y 1
scaler = MinMaxScaler(feature_range=(0, 1))
scaled_data = scaler.fit_transform(df_imputed)

# Crear secuencias de tiempo
def create_dataset(dataset, look_back=60):
    X, Y = [], []
    for i in range(len(dataset) - look_back):
        X.append(dataset[i:(i + look_back), :])
        Y.append(dataset[i + look_back, 0])  # Predecimos meantemp
    return np.array(X), np.array(Y)

# Divisi칩n 80% entrenamiento, 20% test
train_size = int(len(scaled_data) * 0.8)  # 91
train_data = scaled_data[:train_size]
test_data = scaled_data[train_size - 60:]

# Crear datasets de entrenamiento y prueba
look_back = 60
X_train, y_train = create_dataset(train_data, look_back)
X_test, y_test = create_dataset(test_data, look_back)

# Modelo LSTM
model = Sequential([
    LSTM(100, input_shape=(X_train.shape[1], X_train.shape[2]), return_sequences=True),
    Dropout(0.2),
    LSTM(100, return_sequences=False),
    Dense(1)
])
model.compile(optimizer='adam', loss='mean_squared_error')
model.summary()

# Entrenamiento
model.fit(X_train, y_train, epochs=50, batch_size=16, verbose=1)

# Predicciones
predictions_scaled = model.predict(X_test)

# Invertir escalado para comparar con valores reales
# Rellenamos con ceros las otras columnas para usar inverse_transform correctamente
predicted_full = np.concatenate([predictions_scaled, np.zeros((len(predictions_scaled), 3))], axis=1)
y_test_full = np.concatenate([y_test.reshape(-1, 1), np.zeros((len(y_test), 3))], axis=1)
predictions = scaler.inverse_transform(predicted_full)[:, 0]
real = scaler.inverse_transform(y_test_full)[:, 0]

# Fechas correspondientes a los datos reales
prediction_dates = df_imputed.index[train_size:]

# Gr치fico
plt.figure(figsize=(14, 6))
plt.plot(prediction_dates, real, label='Temperatura Real (meantemp)', color='blue')
plt.plot(prediction_dates, predictions, label='Predicci칩n LSTM', color='red')
plt.title('Predicci칩n de temperatura diaria (LSTM)')
plt.xlabel('Fecha')
plt.ylabel('Temperatura (춿C)')
plt.legend()
plt.grid(True)
plt.show()

# Evaluaci칩n mensual con R2 y gr치fico interactivo con Plotly

import plotly.graph_objects as go
from sklearn.metrics import r2_score

# Asegurar que los 칤ndices est칠n en formato datetime
real_demand.index = pd.to_datetime(real_demand.index, dayfirst=True)
predictions_series.index = pd.to_datetime(predictions_series.index, dayfirst=True)

# Calcular R mensual
r_squared_monthly = []
for month, group in real_demand.groupby(real_demand.index.month):
    pred_for_month = predictions_series[group.index]
    r_squared = r2_score(group, pred_for_month)
    r_squared_monthly.append((month, r_squared))
    print(f'R para el mes {month}: {r_squared:.4f}')

# 游늸 Gr치fico interactivo con Plotly
fig = go.Figure()

fig.add_trace(go.Scatter(x=real_demand.index, y=real_demand,
                         mode='lines', name='Temperatura Real',
                         line=dict(color='blue')))

fig.add_trace(go.Scatter(x=predictions_series.index, y=predictions_series,
                         mode='lines', name='Predicci칩n LSTM',
                         line=dict(color='red')))

fig.update_layout(
    title='Predicci칩n vs Real de Temperatura con LSTM',
    xaxis_title='Fecha',
    yaxis_title='Temperatura (춿C)',
    legend_title='Leyenda',
    template='plotly_white'
)

fig.show()

# 游댝 Mostrar los R mensuales
for month, r_squared in r_squared_monthly:
    print(f"R para el mes {month}: {r_squared:.4f}")

#El modelo LSTM utilizado para predecir la temperatura no logr칩 ajustarse adecuadamente a los datos reales, como se observa en la discrepancia entre las curvas de predicci칩n y los valores reales, especialmente durante la segunda mitad del mes. La l칤nea de predicci칩n presenta una tendencia creciente m치s suave y continua, mientras que la temperatura real muestra mayor variabilidad. Esta diferencia sugiere que el modelo no est치 capturando correctamente los patrones y fluctuaciones de la serie temporal.

#Adem치s, el valor de R^2 obtenido (-6.5098) indica un desempe침o muy deficiente, ya que un valor negativo implica que el modelo predice peor que simplemente asumir un valor constante basado en el promedio. Esto puede deberse a un modelo mal ajustado, a un preprocesamiento inadecuado de los datos, o a una arquitectura demasiado simple.
